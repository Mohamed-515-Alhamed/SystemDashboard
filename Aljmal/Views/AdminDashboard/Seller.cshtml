<div class="main-content">
    <div class="search-container">
        <input type="text" class="search-input" placeholder="Search..." >
        <i class="fas fa-search search-icon"></i>
    </div>
    <div class="products-container">
        @foreach (var seller in Model)
        {
            <div class="product-card">
                <img src="http://aljmalapi.runasp.net/@seller.Logo.TrimStart('/')" 
                    alt="@seller.PublicName" 
                    class="product-image">
            
                <div class="product-info">
                    <h3 class="product-title">@seller.PublicName</h3>
                
                </div>
            
                <div class="product-actions">
                    <a asp-action="Edit" asp-route-id="@seller.SubAdminId" 
                       class="action-btn edit-btn" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="DeleteSeller" asp-route-id="@seller.SubAdminId" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this seller?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="action-btn delete-btn" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
