@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}



<!-- Sidebar -->
<!-- Main Content -->
<div class="main-content">
    <div class="header">
        <h1>Dashboard Overview</h1>
        <div class="user-info">
            <img src="https://via.placeholder.com/40" alt="User">
            <span>Admin User</span>
        </div>
    </div>

    <!-- Cards -->
    <div class="cards">
        <div class="card users">
            <h3>Total Users</h3>
            <div class="value">1,254</div>
            <p><i class="fas fa-arrow-up"></i> 12% from last month</p>
        </div>
        <div class="card products">
            <h3>Total Products</h3>
            <div class="value">5,430</div>
            <p><i class="fas fa-arrow-up"></i> 8% from last month</p>
        </div>
        <div class="card orders">
            <h3>New Orders</h3>
            <div class="value">324</div>
            <p><i class="fas fa-arrow-down"></i> 3% from last week</p>
        </div>
        <div class="card revenue">
            <h3>Total Revenue</h3>
            <div class="value">$24,780</div>
            <p><i class="fas fa-arrow-up"></i> 15% from last month</p>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity">
        <h2>Recent Activity</h2>
        <div class="activity-item">
            <div class="activity-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="activity-details">
                <h4>New User Registered</h4>
                <p>John Doe created an account</p>
            </div>
            <div class="activity-time">10 min ago</div>
        </div>
        <div class="activity-item">
            <div class="activity-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="activity-details">
                <h4>New Order Placed</h4>
                <p>Order #12345 for $125.00</p>
            </div>
            <div class="activity-time">25 min ago</div>
        </div>
        <div class="activity-item">
            <div class="activity-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="activity-details">
                <h4>Product Added</h4>
                <p>"Wireless Headphones" added by TechStore</p>
            </div>
            <div class="activity-time">1 hour ago</div>
        </div>
        <div class="activity-item">
            <div class="activity-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="activity-details">
                <h4>Report Generated</h4>
                <p>Monthly sales report for June 2023</p>
            </div>
            <div class="activity-time">2 hours ago</div>
        </div>
    </div>
    <!-- Quick Actions -->
    <div class="quick-actions">
         <a asp-action="CreateSeller" asp-controller="AdminDashboard" style="text-decoration:none">
            <div class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Add Seller</span>
            </div>
        </a>
        <div class="action-btn">
            <i class="fas fa-tag"></i>
            <span>Add Customer</span>
        </div>
        <div class="action-btn">
            <i class="fas fa-chart-pie"></i>
            <span>View Reports</span>
        </div>
        <div class="action-btn">
            <i class="fas fa-bullhorn"></i>
            <span>Run Promotion</span>
        </div>
    </div>    
</div>
<style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href=~/css/Admin.css/>
    /* Quick Actions */
.quick-actions {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
    margin-bottom: 30px;
}

.action-btn {
    background: white;
    border-radius: 8px;
    padding: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
}

    .action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
    }

    .action-btn i {
        font-size: 24px;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .action-btn span {
        display: block;
        font-weight: 600;
        color: var(--dark-color);
    }

    @@media (max-width: 1200px) {
    .stats {
        grid-template-columns: repeat(2, 1fr);
    }

    .quick-actions {
        grid-template-columns: repeat(2, 1fr);
    }
}

</style>

