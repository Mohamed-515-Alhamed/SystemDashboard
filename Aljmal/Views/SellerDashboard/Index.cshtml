@model sellerInfo
@{
    Layout = "_layout";
    ViewData["Title"] = "Seller Dashboard";
}
<!-- Main Content -->
<div class="main-content">
    <div class="header">
        <h1>@Model?.name </h1>
        <div class="user-info">
            <img src="http://aljmalapi.runasp.net/@Model?.logo.TrimStart('/')"  alt="UserLogo">
            @*<span>Your Store</span>*@
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats">
            <div class="stat-card products">
            <h3>Total Orders</h3>
            <div class="value">@Model?.orderCount </div>
            <p>5 low in stock</p>
        </div>
        <div class="stat-card products">
            <h3>Total Products</h3>
            <div class="value">@Model?.productCount </div>
            <p>5 low in stock</p>
        </div>
        <div class="stat-card sales">
            <h3>Today's Sales</h3>
            <div class="value">$1,254</div>
            <p><i class="fas fa-arrow-up"></i> 12% from yesterday</p>
        </div>
        @* <div class="stat-card visitors">
            <h3>Store Visitors</h3>
            <div class="value">324</div>
            <p><i class="fas fa-arrow-up"></i> 8% from last week</p>
        </div>*@
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a asp-action="CreateProduct" asp-controller="SellerDashboard" style="text-decoration:none">
                <div class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Add Product</span>
            </div>
        </a>
            
        <div class="action-btn">
            <i class="fas fa-tag"></i>
            <span>Create Discount</span>
        </div>
        <div class="action-btn">
            <i class="fas fa-chart-pie"></i>
            <span>View Reports</span>
        </div>
        <div class="action-btn">
            <i class="fas fa-bullhorn"></i>
            <span>Run Promotion</span>
        </div>
    </div>
    @{
        if(@Model?.getOrdersDtos!=null)
        {
            <div class="recent-orders">
            <h2>Recent Orders</h2>
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Amount</th>                      
                        <th>View</th>
                        <th>DownLoadPDF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var order in Model?.getOrdersDtos)
                    {
                        <tr>
                            <td>@order?.OrderId </td>
                            <td>@order?.CustomerName </td>
                            <td>@order?.OrderDate </td>
                            <td>$@order?.TotalPrice </td>
                            <td><a asp-action="OrderDetails"  asp-route-id="@order.OrderId">View</a></td>
                            <td><span class="order-status status-completed"><a asp-action="DownloadOrderPdf" asp-route-id="@order.OrderId">DownLoadPDF</a></span></td>
                        </tr>
                    }
                         
                </tbody>
            </table>
            </div>


        }
        else
        {
             <div class="recent-orders">
                <h2>Recent Orders</h2>
                <p>There are no orders </p>
            </div>
        <!-- Recent Orders -->
            <div class="recent-orders">
                <h2>Recent Orders</h2>
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    
                        <tr>
                            <td>#ORD-1002</td>
                            <td>Sarah Johnson</td>
                            <td>Jun 11, 2023</td>
                            <td>$89.50</td>
                            <td><span class="order-status status-processing">Processing</span></td>
                            <td><a href="#">View</a></td>
                        </tr>
                        <tr>
                            <td>#ORD-1003</td>
                            <td>Michael Brown</td>
                            <td>Jun 10, 2023</td>
                            <td>$245.75</td>
                            <td><span class="order-status status-pending">Pending</span></td>
                            <td><a href="#">View</a></td>
                        </tr>
                        <tr>
                            <td>#ORD-1004</td>
                            <td>Emily Davis</td>
                            <td>Jun 9, 2023</td>
                            <td>$67.30</td>
                            <td><span class="order-status status-cancelled">Cancelled</span></td>
                            <td><a href="#">View</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    }
    
    
</div>
