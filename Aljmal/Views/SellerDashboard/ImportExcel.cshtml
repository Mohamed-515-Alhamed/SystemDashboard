<title>Excel File Importer</title>
    <style>
        <link rel="stylesheet" href=~/css/SellerCss.css/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
       
        
        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }
        
        .file-upload {
            text-align: center;
            margin: 30px 0;
        }
        
        .file-upload-label {
            display: inline-block;
            padding: 15px 25px;
            background-color: #3498db;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .file-upload-label:hover {
            background-color: #2980b9;
        }
        
        #file-input {
            display: none;
        }
        
        .file-name {
            margin-top: 15px;
            font-style: italic;
            color: #7f8c8d;
        }
        
        .submit-btn {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 20px;
        }
        
        .submit-btn:hover {
            background-color: #27ae60;
        }
        
        .submit-btn:disabled {
            background-color: #95a5a6;
            cursor: not-allowed;
        }
        
        .instructions {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-left: 4px solid #3498db;
        }
    </style>

<div class="main-content">
    <div class="container">
        <h1>Import Excel File</h1>
        
        <div class="instructions">
            <p>Please select an Excel file (.xlsx, .xls) to import. The file should be properly formatted with column headers in the first row.</p>
        </div>
        <form asp-action="CreateProduct" method="post" enctype="multipart/form-data" class="user-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        <div class="file-upload">
            <label for="file-input" class="file-upload-label">Choose Excel File</label>
            <input type="file" id="file-input" accept=".xlsx, .xls" />
            <div class="file-name" id="file-name">No file selected</div>
        </div>
            <div class="form-actions">
                <button type="submit" class="submit-button">Upload File</button>
                <a asp-action="Index" class="cancel-button">Cancel</a>
            </div>
        </form>
        @*<button type="button" class="submit-btn" id="submit-btn" disabled>Import File</button>*@
    </div>
</div>
    <script>
        document.getElementById('file-input').addEventListener('change', function(e) {
            const fileName = e.target.files[0] ? e.target.files[0].name : 'No file selected';
            document.getElementById('file-name').textContent = fileName;
            
            const submitBtn = document.getElementById('submit-btn');
            submitBtn.disabled = !e.target.files[0];
        });
        
        document.getElementById('submit-btn').addEventListener('click', function() {
            const fileInput = document.getElementById('file-input');
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                alert(`File "${file.name}" selected. In a real application, this would process the file.`);
                
                // Here you would typically:
                // 1. Read the file (using FileReader or a library like SheetJS)
                // 2. Process the data
                // 3. Send to server or display in the browser
            }
        });
    </script>